@model ApplicationUser

<div class="row d-flex justify-content-center align-items-center px-3">
    <div class="col-md-6 card" style="margin-top: 110px">       
        <form asp-action="Edit">
            <div class="d-flex flex-column justify-content-center align-items-center mt-3 mb-2">                
                @*<i class="fas fa-bug text-dark mb-3" style="font-size: 2.2em"></i>*@              
                <h1 class="fs-3 text-secondary">Manage Account Details</h1>
            </div> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" disabled />
                        <label asp-for="FirstName"></label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" disabled />
                        <label asp-for="LastName"></label>                  
                    </div>
                </div>
            </div>      
            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="UserName"></label>             
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>             
            <div class="d-flex flex-column justify-content-center align-items-center">
                <button type="submit" class="btn btn-lg btn-primary w-100 mb-3">Save</button>            
                @*<a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="text-decoration-none link-secondary mb-3">Change Password</a>*@
                <a asp-action="ListUsers">Back to List</a>
            </div>
        </form>       
    </div>
</div>
