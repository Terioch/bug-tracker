@model ApplicationUser

<div class="d-flex flex-column justify-content-center align-items-center h-100">
    <h4>Edit User</h4>
    <div class="row">
        <div class="col">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" disabled />
                            <label asp-for="FirstName"></label>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" disabled />
                            <label asp-for="LastName"></label>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>      
                <div class="form-floating mb-3">
                    <input asp-for="UserName" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="UserName"></label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>                    
                <div class="d-flex flex-column justify-content-center">
                    <button type="submit" class="btn btn-lg btn-primary mb-3">Save</button>            
                    <a class="text-decoration-none link-secondary">Change Password</a>  
                    <a asp-action="ListTickets">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
