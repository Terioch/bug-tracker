@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "EditRole";   
}

<div class="card">
    <div class="card-header bg-light">
        Edit this role
    </div>
    <form method="post" asp-action="Edit">
        <div class="card-body">   
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <div class="row g-md-3">
                <div class="col-md-4">
                     <div class="form-control mb-3 border-0">
                        <label asp-for="Name" class="control-label text-secondary mb-1"></label>
                        <input class="form-control mb-3" asp-for="Name" placeholder="Input the new role name..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>                          
            </div>                               
            <div>
                <button class="btn btn-success" type="submit">Update Role</button>
            </div>  
        </div>
    </form>    
</div>
