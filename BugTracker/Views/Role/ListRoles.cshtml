@using Microsoft.AspNetCore.Identity
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

@model BugTracker.Models.UserRoleViewModel

@inject UserManager<ApplicationUser> userManager

@{
    ViewData["Title"] = "UserRoles";
    ApplicationUser loggedInUser = await userManager.FindByNameAsync(User.Identity.Name);
}

<style>
    btn, .bi, .user-dropdown-item, .page-link {
        cursor: pointer;
    }   
</style>

<div id="rolesMain" class="card">
    <div class="card-header bg-light mb-3">
        <h3 class="mb-3">Manage users assigned to each role</h3>
        @if (await userManager.IsInRoleAsync(loggedInUser, "Admin"))
        {
            <a asp-action="CreateRole" class="btn-link">Create a new role</a>
        } else
        {
            <a asp-action="CreateRole" class="btn-link disabled">Create a new role</a>
        }
    </div>  

    @if (!Model.Roles.Any())
    {
        <div class="card">
            <div class="card-header">
                No roles currently exist
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a new role
                </h5>
                @if (await userManager.IsInRoleAsync(loggedInUser, "Admin"))
                {
                    <a class="btn btn-success text-white" style="width: auto" asp-action="CreateRole">
                        Create Role
                    </a>
                } else
                {
                    <a class="btn btn-success text-white disabled" style="width: auto" asp-action="CreateRole">
                        Create Role
                    </a>
                }         
            </div>
        </div>
    }
    else
    {   
         <div class="row row-cols-1 row-cols-lg-2 g-4 px-3"> 
            @foreach (var role in Model.Roles) 
            {               
                <div class="col">
                    <partial name="_RoleCard" model="role" />
                </div>  
            }                               
        </div>                             

        <!-- User Dropdown Modal -->
        <div class="modal fade" id="userDropdownModal" tabindex="-1" aria-labelledby="userDropdownModal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <form method="post">
                  <div class="modal-header">
                    <h5 class="modal-title" id="userDropownModalTitle">Select a user from the dropdown below</h5>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">                    
                    <input type="hidden" asp-for="RoleId" >
                    <!-- User Select Dropdown -->
                    <label class="control-label mb-2 text-secondary" for="userSelectDropdown">Users</label>
                    <select asp-for="UserId" class="form-select" id="userSelectDropdown">
                        @foreach (var user in userManager.Users)
                        {
                            <option value="@user.Id">@user.UserName</option>           
                        }
                    </select>
                    <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div> 
                  </div>
                  <div class="modal-footer text-left">                
                    <button formaction="@Url.Action("AddUser")" type="submit" class="btn btn-success add-user" data-bs-dismiss="modal">Add Selected User</button>
                    <button formaction="@Url.Action("RemoveUser")" type="submit" class="btn btn-danger remove-user" data-bs-dismiss="modal">Remove Selected User</button>
                  </div>
              </form>              
            </div>
          </div>
        </div>       
    }
</div>
 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
