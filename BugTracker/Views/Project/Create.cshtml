@model BugTracker.Models.Project

@{
    ViewData["Title"] = "Create New Project";
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Create a New Project</title>
        <style>
            .form-control {
                border-radius: 0;       
            }

            .create-project-input {
                padding-left: 0;
                margin-left: 0;
            }

            .create-project-input:focus {
                outline: none;
                box-shadow: none;
            }

            label {
                font-size: .85rem;
            }
        </style>
    </head>
    <body>
        <div class="card">
            <div class="card-header">
                <h1 class="fs-4 mb-0">Create a New Project</h1>
            </div>
            <form asp-action="Create" class="pb-0 mb-0">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">                        
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>                                    
                                <div class="form-control mb-4 border-0">                                
                                    <label asp-for="Name" class="control-label text-secondary"></label>
                                    <input asp-for="Name" class="create-project-input form-control border-0 border-bottom pb-0" />                                
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-control border-0">                                
                                    <label asp-for="Description" class="control-label text-secondary"></label>
                                    <input asp-for="Description" class="create-project-input form-control border-0 border-bottom pb-0" />                                
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>                                                   
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-end">
                    <input type="submit" value="Submit" class="btn btn-success me-3" />
                    <a asp-action="ListProjects" class="link-primary">View Project List</a>
                </div>
            </form>
        </div>    

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    </body>
</html>
