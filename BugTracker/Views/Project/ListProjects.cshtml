@model IEnumerable<Project>;

@{
    ViewData["Title"] = "Projects Page";
}

<div class="card" style="min-height: 89vh">
  <div class="card-header bg-light">
      <h1 class="fs-3 mt-2">Your Projects</h1>   
  </div>
  <div class="card-body">
    <div class="d-sm-flex justify-content-between align-items-center">  
        <div class="input-group-sm">
            <input id="projectSearchInput" class="form-control mb-3" placeholder="Search Project..."  />
        </div>        
        <a class="btn btn-primary mb-3" asp-action="Create">Create New Project</a>
    </div>
    <div id="projectListContainer">
        @if (!Model.Any()) 
        {              
            <div class="alert alert-info fs-5 mt-3" role="alert">
              There are currently no projects associated with your account.
            </div>    
        } 
        else
        {   
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>          
                            <th scope="col">Project Name</th>
                            <th scope="col">Ticket Count</th>
                            <th scope="col">Description</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model)
                        {                                                     
                            <tr>
                                <td>@project.Name</td>                        
                                <td>@project?.Tickets?.Count</td>   
                                <td>@project?.Description</td>
                                <td class="d-flex flex-column">
                                    <a href="" class="link-success">Manage Users</a>
                                    <a asp-action="Details" asp-route-id="@project?.Id" class="link-info">Details</a>                            
                                </td>
                            </tr>                                        
                        }     
                    </tbody> 
                </table>        
            </div>
        }        
    </div>                     
  </div>
</div>
