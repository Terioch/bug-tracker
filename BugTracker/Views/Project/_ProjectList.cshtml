@using X.PagedList;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;

@model IPagedList<Project>;

<div>
    @if (!Model.Any()) 
    {              
        <div class="alert alert-info fs-5 mt-3" role="alert">
          There are no projects associated with that search term.
        </div>    
    } 
    else
    {   
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>          
                        <th scope="col">Project Name</th>
                        <th scope="col">Ticket Count</th>
                        <th scope="col">Description</th>
                        <th scope="col"></th>
                    </tr>
                </thead>

                @foreach (var project in Model)
                {                               
                    <tbody>
                        <tr>
                            <td>@project.Name</td>                        
                            <td>@project?.Tickets.ToList().Count</td>   
                            <td>@project?.Description</td>
                            <td class="d-flex flex-column">
                                <a href="" class="link-success">Manage Users</a>
                                <a asp-action="Details" asp-route-id="@project?.Id" class="link-info">Details</a>                            
                            </td>
                        </tr>     
                    </tbody>            
                }           
            </table>        
            <div>
                <p class="text-secondary" style="font-size: 14px">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 
                    of @Model.PageCount
                </p>                   
                @Html.PagedListPager(
                    Model, 
                    page => Url.Action("ListProjects", new { page }),
                    new PagedListRenderOptions() 
                    {
                        UlElementClasses = new string[] { "pagination", "mb-0" },
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" }
                    })
            </div>
        </div>
    }        
</div>