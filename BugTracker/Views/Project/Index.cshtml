@model IEnumerable<Project>;

@{
    ViewData["Title"] = "Projects Page";
}

<div class="card" style="min-height: 89vh">
  <div class="card-header">
      <h1 class="fs-3">Your Projects</h1>   
  </div>
  <div class="card-body">
    <div class="d-sm-flex justify-content-between align-items-center">  
        <div class="input-group-sm">
            <input class="form-control mb-3" placeholder="Search Project..."  />
        </div>        
        <button class="btn btn-primary mb-3">Create New Project</button>
    </div>

    <table class="table">
      <thead>
        <tr>          
          <th scope="col">Project Name</th>
          <th scope="col">Ticket Count</th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody>
            @if (!Model.Any()) 
            {
                <tr class="fs-5">There are no projects currently assigned to you</tr>
            } 
            else
            {
                @foreach (var project in Model)
                {
                    <tr>
                        <td>@project.Name</td>
                        <td>@project?.Tickets?.Count</td>
                        <td>@project?.Description</td>
                        <td>
                            <a href="">Details</a>
                            <a href="">Manage Users</a>
                        </td>
                    </tr>     
                }           
            }                     
      </tbody>
    </table>
  </div>
</div>

<div class="text-center">
    <ul>
        
    </ul>
</div>
