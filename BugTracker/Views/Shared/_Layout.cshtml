@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Identity;
@using BugTracker.Models;

@inject UserManager<ApplicationUser> userManager;

@{
    ApplicationUser loggedInUser = new ApplicationUser();
    if (User?.Identity?.Name != null)
    {
        loggedInUser = await userManager.FindByNameAsync(User?.Identity?.Name);   
    }   
}

<style>
    body, html {
        height: max-content;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BugTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BugTracker.styles.css" asp-append-version="true" />
</head>
<body>    
    <main class="container-fluid h-100">       
        <div class="row flex-nowrap">
            <!-- Top Nav and Main Content Column -->
            <div class="col">
                <div class="row">
                    <!-- Top Nav -->            
                    <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light border-bottom box-shadow">
                        <div class="container-fluid">
                            <a class="navbar-brand" asp-area="" asp-controller="Project" asp-action="ListProjects">BugTracker</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-md-inline-flex justify-content-between align-items-center">                
                                <partial name="_LoginPartial" />
                            </div>
                        </div>
                    </nav> 
                </div>

                <div class="row">
                    <!-- Main Content -->
                    <div class="col mt-3">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>

                @*<div class="row">
                    <!-- Footer -->
