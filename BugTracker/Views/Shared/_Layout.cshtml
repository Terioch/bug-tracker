@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Identity;
@using BugTracker.Models;

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> userManager;

@{
    ApplicationUser loggedInUser = await userManager.FindByNameAsync(User.Identity.Name);
    // Modify such that the role of the highest degree is prioritized during selection
    IList<string> roles = await userManager.GetRolesAsync(await userManager.FindByNameAsync(User.Identity.Name)) ?? new List<string>();
    var loggedInAs = roles.First() ?? User.Identity.Name;
}

<style>
    body, html {
        height: max-content;
    }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BugTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BugTracker.styles.css" asp-append-version="true" />
</head>
<body>    
    <main class="container-fluid h-100">       
        <div class="row flex-nowrap">
            <!-- Top Nav and Main Content Column -->
            <div class="col">
                <div class="row">
                    <!-- Top Nav -->            
                    <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light border-bottom box-shadow">
                        <div class="container-fluid">
                            <a class="navbar-brand fs-4 text-secondary" asp-controller="Project" asp-action="ListProjects">Bug Tracker <i class="fas fa-bug text-dark"></i></a>                            
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="navbar-collapse collapse d-md-inline-flex justify-content-between">                
                                <ul class="navbar-nav ms-auto">                                                            
                                    @if (SignInManager.IsSignedIn(User))
                                    {                                          
                                        <li class="nav-item">
                                            <a class="nav-link" title="Manage">Logged in as: @loggedInAs</a>
                                        </li>
                                        <li class="nav-item">
                                            <a asp-action="Details" asp-controller="User" asp-route-id="@loggedInUser.Id" class="nav-link">Profile</a>
                                        </li>   
                                        <li class="nav-item">                                                                                      
                                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("ListProjects", "Project", new { area = "" })">Logout</a>                                           
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                        </li>
                                    }
                                </ul>
                            </div>                             
                        </div>
                    </nav>                   
                </div>

                <div class="row">
                    <!-- Main Content -->
                    <div class="col mt-3">
                        <main role="main" class="pb-3">
                            @RenderBody()
                        </main>
                    </div>
                </div>

                @*<div class="row">
                    <!-- Footer -->
                    <footer class="border-top footer text-muted" style="position: fixed; bottom: 0; left: 0">
                        <div class="container">
                            &copy; 2021 - BugTracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </div>
                    </footer>    
                </div>*@
            </div>
    
            <!-- SideBar Nav Column -->
            <div class="col-auto col-lg-3 col-xl-2 px-sm-2 px-0 bg-primary" style="min-height: 100vh">
                <div class="d-flex flex-column align-items-center align-items-sm-start p-2 text-white">                          
                    <!-- Nav Header -->
                    <div class="w-100 d-flex flex-column mx-auto pb-3 text-center fs-2">
                        <p class="p-0 m-0">Welcome,</p>
                        <p class="p-0 m-0 fw-bold">@loggedInUser.FirstName</p>
                    </div>              
                    
                    <div style="height: 1px; width: 100%; background-color: grey" />
                    
                    <!-- Nav Items -->
                    <ul class="nav nav-pills flex-column mb-sm-auto mt-2 mb-0 align-items-center align-items-md-start">
                        <li class="nav-item mb-3">
                            <a class="nav-link align-middle" asp-controller="Project" asp-action="ListProjects">                             
                                <span class="me-2 d-none d-md-inline">My Projects</span>
                                <i class="fs-5 fas fa-toolbox"></i> 
                            </a>
                        </li>
                        <li class="nav-item mb-3">
                            <a class="nav-link align-middle" asp-controller="Ticket" asp-action="ListTickets">                                
                                <span class="me-2 d-none d-md-inline">My Tickets</span>
                                <i class="fs-5 fas fa-tasks"></i>
                            </a>
                        </li>                        
                        <li class="nav-item mb-3">
                            <a class="nav-link align-middle" asp-controller="User" asp-action="ListUsers">
                                <span class="me-2 d-none d-md-inline">User Management</span>
                                <i class="fs-5 fas fa-users"></i>                                 
                            </a>
                        </li>
                        <li class="nav-item mb-3">
                            <a class="nav-link align-middle" asp-controller="Role" asp-action="ListRoles">                                
                                <span class="me-2 d-none d-md-inline">Role Management</span>
                                <i class="fs-5 fas fa-user-shield"></i> 
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>                      
    </main>

